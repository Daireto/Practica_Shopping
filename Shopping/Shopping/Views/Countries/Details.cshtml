@model Shopping.Data.Entities.Country

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div>
    <h4>Detalles del País</h4>
    <partial name="_CountryDetails" />
</div>
<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model?.Id">Eliminar</a>
    <a class="btn btn-outline-success" asp-action="Index">Regresar</a>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Departamentos/Estados</h3>
            </div>
            <div class="panel-body">
                <p>
                    <a class="btn btn-outline-primary" asp-action="CreateState" asp-route-id="@Model?.Id">Crear Departamento/Estado</a>
                </p>
                <table class="table" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.States.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.States.FirstOrDefault().CitiesNumber)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.States)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CitiesNumber)
                                </td>
                                <td>
                                    <a class="btn btn-outline-info" asp-action="DetailsState" asp-route-id="@item.Id">Detalles</a>
                                    <a class="btn btn-outline-warning" asp-action="EditState" asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-outline-danger" asp-action="DeleteState" asp-route-id="@item.Id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
}