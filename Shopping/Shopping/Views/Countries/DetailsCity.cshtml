@model Shopping.Data.Entities.City

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Ciudad</h4>
    <partial name="_CityDetails" />
</div>
<div>
    <a class="btn btn-outline-warning" asp-action="EditCity" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-outline-danger" asp-action="DeleteCity" asp-route-id="@Model?.Id">Eliminar</a>
    <a class="btn btn-outline-success" asp-action="DetailsState" asp-route-id="@Model?.State.Id">Regresar</a>
</div>
