@model Shopping.Data.Entities.State

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Departamento/Estado</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_State" />
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@Model?.Country.Id">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
