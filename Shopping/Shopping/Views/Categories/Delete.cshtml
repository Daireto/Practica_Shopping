@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Está seguro de querer eliminar esta categoría?</h3>
<div>
    <partial name="_CategoryDetails" />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a class="btn btn-outline-success" asp-action="Index">Regresar</a>
    </form>
</div>
