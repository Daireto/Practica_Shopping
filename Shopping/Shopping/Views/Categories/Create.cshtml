@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Category" />
            <div class="form-group mt-2">
                <input type="submit" value="Crear categoría" class="btn btn-outline-primary" />
                <a class="btn btn-outline-success" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
